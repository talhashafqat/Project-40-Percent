<%- include("partials/header.ejs") %>

<div class="out">
  <div class="dashboard__page">
    <div class="header js-header"><button class="header__burger js-header-burger"><svg class="icon icon-burger">
          <use xlink:href="img/sprite.svg#icon-burger"></use>
        </svg></button><a class="header__logo" href="#"><img src="img/dashboard_logo.svg" alt="" /><img class="header__pic header__pic_white" src="img/logo-white.svg" alt="" /></a>
      <div class="header__title">Dashboard</div>
      <div class="header__group">
        <a class="header__profile" href="#"><img class="header__pic" src="img/header-ava.png" alt="" /></a>
      </div>
      <div class="header__bg js-header-bg"></div>
    </div>
    <div class="dashboard__pageWrapper">
      <div class="sidebar js-sidebar">
        <div class="sidebar__top"><button class="sidebar__close js-sidebar-close"><svg class="icon icon-close">
              <use xlink:href="img/sprite.svg#icon-close"></use>
            </svg></button><a class="sidebar__logo" href="#"><img class="sidebar__pic sidebar__pic_black" src="img/logo.svg" alt="" /><img class="sidebar__pic sidebar__pic_white" src="img/logo-white.svg" alt="" /></a></div>
        <div class="sidebar__wrapper">

          <div class="sidebar__menu"><a class="sidebar__item active" href="#">
              <img class="icon " src="img/dashboard_icon.svg" alt="">
              Dashboard</a><a class="sidebar__item" href="">
              <img class="icon " src="img/customPlanner_icon.svg" alt="">
              Custom Planner</a><a class="sidebar__item" href="/virtualboard">
              <img class="icon" src="img/virtualBoard_icon.svg" alt="">
              Virtual Board</a>
            <a class="sidebar__item" style="color: #E92424" href="/">
              <img class="icon" src="img/logout_icon.svg" alt="">
              Logout</a>
          </div>
        </div>
      </div>
      <div class="page3__container">
        <div class="student__dashboard">
          <div class="student__head">
            <h1 class="student__title title title_big">Hi <%= kidName %> !</h1>
            <div class="student__text">Experience Points : <span class="student__link"><%= experiencePoints %> XP </span>   |  Age: <span class="student__link"><%= age %></span>  </div>
            <div class="student__control">
              <div class="delete__student">
                <button class="btn btn_gray js-popup-open" href="#popup-details" data-effect="mfp-zoom-in">
                  <span class="btn__text btn_delete ">Delete Kid</span></button>
              </div>
              <div class="add__student">
                <button class="btn btn_purple">
                  <span class="btn__text ">Visit Kid Zone</span></button>
              </div>
            </div>
          </div>

          <div class="event">
              <div class="sorting1">
                <div class="sorting1__row">
                  <h1 class="sorting1__title title">Rewards Cards</h1>
                </div>
              </div>
              <div class="event__list"><a class="event__item" href="#">
                  <div class="event__preview"><img class="event__pic" src="img/Card 1.png" alt=""></div>
                  <div class="event__body">
                    <div class="event__details">
                      <div class="event__title">iBN-E-SINA</div>
                      <div class="event__info"><span class="event__time">Entry Level</span><span class="event__place">Expeirence Points: 20XP</span></div>
                      <div class="student__icon tooltip" title="Onfire"><img class="student__pic" style="margin-left: 10px;" src="img/acheivment.svg" alt=""></div>
                    </div>
                  </div>
                </a>

                <a class="event__item" href="#">
                    <div class="event__preview"><img class="event__pic" src="img/Card 2.png" alt=""></div>
                    <div class="event__body">
                      <div class="event__details">
                        <div class="event__title">ABBAS IBNE FARNAS</div>
                        <div class="event__info"><span class="event__time">Novice</span><span class="event__place">Expeirence Points: 40XP</span></div>
                        <div class="student__icon tooltip" title="Onfire"><img class="student__pic" style="margin-left: 10px;" src="img/locked.svg" alt=""></div>
                      </div>
                    </div>
                  </a>

                  <a class="event__item" href="#">
                      <div class="event__preview"><img class="event__pic" src="img/Card 3.png" alt=""></div>
                      <div class="event__body">
                        <div class="event__details">
                          <div class="event__title">Jabir Bin Hayan</div>
                          <div class="event__info"><span class="event__time">Skillful</span><span class="event__place">Expeirence Points: 60XP</span></div>
                          <div class="student__icon tooltip" title="Onfire"><img class="student__pic" style="margin-left: 10px;" src="img/locked.svg" alt=""></div>
                        </div>
                      </div>
                    </a>

                    <a class="event__item" href="#">
                        <div class="event__preview"><img class="event__pic" src="img/Card 4.png" alt=""></div>
                        <div class="event__body">
                          <div class="event__details">
                            <div class="event__title">Albert Einstein</div>
                            <div class="event__info"><span class="event__time">Proficient</span><span class="event__place">Expeirence Points: 80XP</span></div>
                            <div class="student__icon tooltip" title="Onfire"><img class="student__pic" style="margin-left: 10px;" src="img/locked.svg" alt=""></div>
                          </div>
                        </div>
                      </a>

                      <a class="event__item" href="#">
                          <div class="event__preview"><img class="event__pic" src="img/Card 5.png" alt=""></div>
                          <div class="event__body">
                            <div class="event__details">
                              <div class="event__title">Issac Newton</div>
                              <div class="event__info"><span class="event__time">Expert</span><span class="event__place">Expeirence Points: 100XP</span></div>
                              <div class="student__icon tooltip" title="Onfire"><img class="student__pic" style="margin-left: 10px;" src="img/locked.svg" alt=""></div>
                            </div>
                          </div>
                        </a>
                </div>
            </div>


        </div>
      </div>
    </div>


    <!-- REMOVE KID POPUP -->

    <div class="popup mfp-hide" id="popup-details">
      <div class="details">
        <div class="details__container">
          <div class="details__head">
            <div class="details__title">Remove Kid</div>
            <div class="details__info">Are you sure you want to remove <span class="student__highlight"><%= kidName %></span> from the system? All the data will be deleted along the kid.</div>
          </div>
          <div class="details__wrapper">
            <form class="entry__form"  method="post" action="/deletekid">
              <div class="entry__btns"><button class="entry__btn btn btn btn_big btn_gray" type="button">No</button><button class="entry__btn btn btn btn_big btn_red" type="submit">Delete Kid</button></div>
              <input type="hidden" name="kidID" value="<%= kidID %>">
            </form>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
</div>

<%- include("partials/footer.ejs") %>
