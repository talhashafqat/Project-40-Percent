<%- include("partials/header.ejs") %>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Sign In</title>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
    <link rel="stylesheet" media="all" href="/css/styles.css">
</head>

<body>
    <div class="out">
        <div class="login">
            <div class="login__container">
                <div class="login__wrap">
                    <div class="login__head"><a class="login__logo" href="#"><img class="login__pic" src="img/logo.svg"
                                alt=""></a></div>
                    <form class="login__form" action="/signin" method="POST">
                        <div class="login__body">
                            <div class="login__title login__title_sm">Login to your account</div>
                            <div class="login__field field">

                              <div class="field1 field1_email js-field">
                                <div class="field1__label">Email</div>
                                <div class="field__wrap"><input class="field1__input js-field-input" type="email" name="userEmail" required>
                                </div>
                              </div>

                              <div class="field1 field1_email js-field login_password ">
                                <div class="field1__label">Password</div>
                                <div class="field__wrap "><input class="field1__input js-field-input" type="password" name="userPassword" required>
                                </div>
                              </div>

                                <div class="field__wrap" id="registrationError">
                                  <% if (invalidUser) { %>
                                    <p class="invalid__login">Invalid Username or Password</p>
                                <%  }; %>
                                </div>

                            </div><button class="login__btn btn btn btn_green" type="submit">Continue</button>
                            <div class="login__or">or</div>
                            <div class="login__btns"><a href="/google"><button class="login__btn btn btn btn_border-gray"
                                    type="button" ><img class="btn__pic" src="img/google.svg" alt="" width="16"><span
                                        class="btn__text">Continue with
                                        Google</span></button></a></div>
                            <ul class="login__links">
                                <li><a class="login__link" href="/signup">Sign up for new user?</a></li>
                            </ul>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
<%- include("partials/footer.ejs") %>
